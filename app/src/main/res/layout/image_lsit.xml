<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.bignerdranch.android.imageloadingwan.CircleImageViewWan
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/image_user_avatar"
                android:src="@drawable/video"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_user_name"
                android:layout_toRightOf="@id/image_user_avatar"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:textSize="15sp"/>

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_create_time"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="13dp"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="13dp"
            android:textSize="18sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:id="@+id/image_imageView3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="48dp"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/image_image_follow"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="30dp"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_text_follow"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="70dp"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/image_image_hate"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="150dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_text_hate"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="190dp"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/image_image_wechat"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="259dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_text_wechat"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="295dp"
                android:text="跳转至微信"
                android:textColor="@color/colorPrimary"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>