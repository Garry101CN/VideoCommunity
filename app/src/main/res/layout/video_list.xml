<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.bignerdranch.android.imageloadingwan.CircleImageViewWan
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/video_user_avatar"            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/video_user_name"
                android:layout_toRightOf="@id/video_user_avatar"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:textSize="15sp"/>


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/video_create_time"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="13dp"
            android:textSize="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/video_title"
            android:textSize="18sp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <SurfaceView
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="57dp"
                android:id="@+id/video_surface"/>
            <ImageView
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="30dp"
                android:scaleType="centerCrop"
                android:id="@+id/video_image_firstbitmap"
                />
            <ProgressBar
                android:layout_width="320dp"
                android:layout_height="3dp"
                android:max="100"
                android:id="@+id/video_progressbar"
                android:layout_marginTop="207dp"
                android:layout_marginLeft="30dp"
                style="@android:style/Widget.ProgressBar.Horizontal"/>
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/video_image_follow"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="30dp"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/video_text_follow"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="70dp"/>
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/video_image_hate"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="150dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/video_text_hate"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="190dp"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/video_image_wechat"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="259dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/video_text_wechat"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="301dp"
                android:text="跳转至微信"
                android:textColor="@color/colorPrimary"/>


        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>